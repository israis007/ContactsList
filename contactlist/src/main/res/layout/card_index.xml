<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_index_conslay_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/card_index_iv_icon"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/ic_fav"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card_index_actv_icon"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:text="A"
        android:textColor="@color/favColor"
        android:textSize="35sp"
        android:layout_marginStart="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_index_rv_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toEndOf="@id/card_index_iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>